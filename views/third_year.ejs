                <script>
                    function openPdfPopup(pdfPath) {
                        // Calculate the position for the popup window to be centered
                        var screenWidth = window.screen.width;
                        var screenHeight = window.screen.height;
                        var popupWidth = 800;
                        var popupHeight = 600;
                        var left = (screenWidth - popupWidth) / 2;
                        var top = (screenHeight - popupHeight) / 2;
            
                        // Open a new window with the PDF
                        var pdfWindow = window.open(pdfPath, '_blank', 'width=' + popupWidth + ', height=' + popupHeight + ', left=' + left + ', top=' + top);
                        if (!pdfWindow || pdfWindow.closed || typeof pdfWindow.closed == 'undefined') {
                            alert('Please allow popups for this site.'); // Alert if the window was blocked
                        }
                        return false; // Prevent default link behavior
                    }
                </script>
            </div>

